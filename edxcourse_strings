name = "Michael Jackson"
# print string
print (name)

# Print the first element in the string
print(name[1])

# Print the 5th element in the string
print(name[5])

# Print the 13th index in the string
print(name[13])

# Tell the number of characters in the string
print(len(name))

# Print the last number in the string
print(name[-1])

# Print the first letter of the string in negative indexing
print(name[-15])

# Take the slice on variable Name with only indexing 0 to index 4
print(name[0:4])

# Take the slice on variable Name with indexing 4 and 8
print(name[4:8])

statement = name + " is the best"
print(statement)

# Print the string 3 times
print(3*"Run Away  ")

name = name + " sucks"
print (name)

# print the sequence across multiple lines
print("Michael Jackson is a \n stupid o")

# Tab the statment using a t
print(statement,"\t",name)

# Include a back slash in the string
print("Bats are better than \\ cats")

# R can tell us to show a raw string
print(r" Bats are better than \ cats")

# I've converted the characters into upper case

A= "Thriller is the 6th album"
print("before upper:",A)
B=A.upper()
print("After upper:", B)

print(name.upper())
print(statement.upper())
print(name.lower())

# I've replaced title with a name 

c = A.replace('Thriller', ' Janet')
print(c.upper())

print(name.find('el'))
print(name.find('Jacdsf'))

# Example questions for Strings

A = "1"
B = "2"
C = A + B
print(C)

D ="ABCDEFG"
print(D[0:3])

E='clocrkr1e1c1t'
print(E[::2])

print("There are many cats \\ here")
print(r"There are many cats \ here")

F = "You are wrong"
print(F.upper())

G = "Mary had a little lamb Little lamb, little lamb Mary had a little lamb \
Its fleece was white as snow And everywhere that Mary went Mary went, Mary went \
Everywhere that Mary went The lamb was sure to go"

print(G.find("snow"))
print(G.find("Mary"))

print(G.replace("Mary","Bob"))


